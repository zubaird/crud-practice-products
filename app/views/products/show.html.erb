<%= form_for @product do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_area :description %>

<%= f.label :price %>
<%= f.text_field :price %>

<%= f.label :created_at %>
<%= f.label :updated_at %>

<% end %>

<%= link_to "Edit", edit_product_path(@product) %>
<%= link_to "Delete", product_path(@product), :confirm => 'Are you sure?', :method => :delete %>
